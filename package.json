{
  "name": "novelstudioai",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/server"
  ],
  "scripts": {
    "dev": "concurrently -n web,server -c auto \"npm:dev:web\" \"npm:dev:server\"",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:server": "npm --workspace apps/server run dev",
    "build": "npm --workspace apps/web run build",
    "lint": "npm --workspace apps/web run lint",
    "test": "npm --workspace apps/web run test",
    "test:run": "npm --workspace apps/web run test:run",
    "test:e2e": "npm --workspace apps/web run test:e2e",
    "test:smoke": "npm --workspace apps/web run test:smoke"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
